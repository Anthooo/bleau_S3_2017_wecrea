<footer class="page-footer">
    <div class="container container_footer">
        <div class="row row_custom" style="margin-bottom: 0">
            <div class="col l6 s12">
                <a href="#defiscalisation"><h5>En savoir plus sur la fiscalité entreprises</h5></a>
                <form name="newsletter" method="post" id="form-newsletter" action="{{ path('we_crea_newsletter') }}">
                    <div>
                        <label for="newsletter" style="font-size: 1em; height: 30px;">Inscription Newsletter</label>
                    </div>
                    <div>
                        <input type="email" name="email" placeholder="Saisissez votre email" required style="width: 60%; height: 30px; background: #fff; text-indent: 5px;">
                        <input type="submit" style="background: black; height: 30px; width: 100px; border: none; color: #fff;">
                    </div>

                </form>
            </div>
            <div class="col l4 offset-l2 s12">
                <h5>Contacts</h5>
                <ul>
                    <li><a href="{{ path('we_crea_contact') }}">Nous contacter</a></li>
                    {% if (footer.facebook != null) %}
                        <li><a href="{{ footer.facebook }}" target="_blank">Facebook</a></li>
                    {% endif %}
                    {% if (footer.twitter != null) %}
                        <li><a href="{{ footer.twitter }}" target="_blank">Twitter</a></li>
                    {% endif %}
                    {% if (footer.instagram != null) %}
                        <li><a href="{{ footer.instagram }}" target="_blank">Instagram</a></li>
                    {% endif %}
                    {% if (footer.youtube != null) %}
                        <li><a href="{{ footer.youtube }}" target="_blank">Youtube</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    <div class="footer-copyright bar_footer">
        <div class="container">
            <div class="row center-align">
                <div class="col m4 s12">
                    © 2017 Copyright WCS & We-Crea
                </div>
                <div class="col m4 s12">
                    <a class="moreLink"href="#cguModal">C.G.U</a>
                </div>
                <div class="col m4 s12">
                    <a class="moreLink" href="#mentionsModal">Mentions légales</a>
                </div>
            </div>
            <div class="row center-align">
                <div class="col s12">
                    <a id="moreLink">Contactez-nous</a>
                </div>
            </div>
        </div>
    </div>
</footer>

<!-- Modal Structure -->
<div id="defiscalisation" class="modal">
    <div class="modal-content">
        <h4 style="color: black !important;">Fiscalité entreprises</h4>
        {% autoescape %}
            {{ footer.defiscalisation | raw }}
        {% endautoescape %}
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Fermer</a>
    </div>
</div>

<!-- Modal Structure -->
<div id="cguModal" class="modal">
    <div class="modal-content">
        <h4 style="color: black !important;">Conditions générales d'utilisation</h4>
        {% autoescape %}
            {{ footer.cgu | raw }}
        {% endautoescape %}
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Fermer</a>
    </div>
</div>

<!-- Modal Structure -->
<div id="mentionsModal" class="modal">
    <div class="modal-content">
        <h4 style="color: black !important;">Mentions légales</h4>
        {% autoescape %}
            {{ footer.mention | raw }}
        {% endautoescape %}
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Fermer</a>
    </div>
</div>

<script type="text/javascript">

    {% if app.request.get('_route') == 'we_crea_homepage' or
        app.request.get('_route') == 'we_crea_actu'
    %}
    var $footer = $('footer');

    $footer.css({
        'position' : 'absolute',
        'bottom' : '0',
        'left' : '0',
        'width' : '100vw'
    });
    {% endif %}
</script>