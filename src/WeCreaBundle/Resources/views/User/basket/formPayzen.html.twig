<form method="POST" name="formPay" action="https://secure.payzen.eu/vads-payment/">
    <input type="hidden" name="vads_action_mode" value="INTERACTIVE" />
    <input type="hidden" name="vads_amount" value="{{ totalForm }}" />
    <input type="hidden" name="vads_ctx_mode" value="PRODUCTION" />
    <input type="hidden" name="vads_currency" value="978" />
    <input type="hidden" name="vads_page_action" value="PAYMENT" />
    <input type="hidden" name="vads_payment_config" value="SINGLE" />
    <input type="hidden" name="vads_redirect_error_timeout" value="10" />
    <input type="hidden" name="vads_redirect_success_timeout" value="10" />
    <input type="hidden" name="vads_return_mode" value="POST" />
    <input type="hidden" name="vads_site_id" value="13227131" />
    <input type="hidden" name="vads_trans_date" value="{{ dateTrans|date("YmdHis") }}" />
    <input type="hidden" name="vads_trans_id" value="{{ idTrans }}" />
    <input type="hidden" name="vads_version" value="V2" />
    <input type="hidden" name="vads_url_cancel" value="https://www.lesartistesdabord.fr/basket" />
    <input type="hidden" name="vads_url_error" value="https://www.lesartistesdabord.fr/pay" />
    <input type="hidden" name="vads_url_refused" value="https://www.lesartistesdabord.fr/pay" />
    <input type="hidden" name="vads_url_success" value="https://www.lesartistesdabord.fr/pay" />
    <input type="hidden" name="signature" value="{{ signature }}"/>
</form>