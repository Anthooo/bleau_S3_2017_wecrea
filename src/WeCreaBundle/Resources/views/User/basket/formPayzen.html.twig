<form method="POST" action="https://secure.payzen.eu/vads-payment/">
    <input type="hidden" name="vads_action_mode" value="INTERACTIVE" />
    <input type="hidden" name="vads_amount" value="{{ ttc }}00" />
    <input type="hidden" name="vads_ctx_mode" value="TEST" />
    <input type="hidden" name="vads_currency" value="978" />
    <input type="hidden" name="vads_page_action" value="PAYMENT" />
    <input type="hidden" name="vads_payment_config" value="SINGLE" />
    <input type="hidden" name="vads_redirect_error_timeout" value="3" />
    <input type="hidden" name="vads_redirect_success_timeout" value="3" />
    <input type="hidden" name="vads_return_mode" value="POST" />
    <input type="hidden" name="vads_site_id" value="13227131" />
    <input type="hidden" name="vads_trans_date" value="{{ commands.date|date("YmdHis") }}" />
    <input type="hidden" name="vads_trans_id" value="{{ idTrans }}" />
    <input type="hidden" name="vads_version" value="V2" />
    <input type="hidden" name="vads_url_cancel" value="http://wecrea.wcs-fontainebleau.fr/basket" />
    <input type="hidden" name="vads_url_error" value="http://wecrea.wcs-fontainebleau.fr/pay" />
    <input type="hidden" name="vads_url_refused" value="http://wecrea.wcs-fontainebleau.fr/pay" />
    <input type="hidden" name="vads_url_success" value="http://wecrea.wcs-fontainebleau.fr/pay" />
    <input type="hidden" name="signature" value="{{ signature }}"/>
    <input type="submit" name="payer" value="Payer"/>
</form>