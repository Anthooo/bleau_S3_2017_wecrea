<div class="container">
    <div class="row">
        <h2 id="title-actu"> Nos actualités </h2>
        {% for actu in actus %}

            <div class="card actu-user" id="{{ actu.id }}">
                <h1 class="titreActu">{{ actu.title }}</h1>

                <div class="card-image figure-no-zoom">
                    <img src="{{ asset('images/'~actu.images.url) }}" class="materialboxed">
                </div>
                <div class="card-content content">
                    {% autoescape %}
                        {{ actu.content|raw }}
                    {% endautoescape %}
                </div>
                {% set myPath = path('we_crea_homepage') ~'#redir' %}
                {% set myPath2 = asset('images/') ~ actu.images.url %}
                <div class="card-action actuShare">
                    <span class="shareTxt left">Partager :
                    <a href="http://www.facebook.com/sharer.php?u={{ app.request.getSchemeAndHttpHost()}}{{ myPath }}&p[title]={{ actu.title }}" target="_blank">
                        <i class="fab fa-facebook-square share"></i>
                    </a>
                    <a href="https://twitter.com/intent/tweet?text={{ actu.title }}%20%7C%20Les%20Artistes%20d&#39abord&url={{ app.request.getSchemeAndHttpHost()}}{{ myPath }}&hashtags=lesartistesdabord" target="_blank">
                        <i class="fab fa-twitter-square share"></i>
                    </a>
                    <a href="https://plus.google.com/share?url={{ app.request.getSchemeAndHttpHost()}}{{ myPath }}" target="_blank">
                        <i class="fab fa-google-plus-square share"></i>
                    </a>
                    <a data-pin-do="buttonPin" href="https://www.pinterest.com/pin/create/button/?url={{ app.request.getSchemeAndHttpHost()}}{{ myPath }}&media={{ app.request.getSchemeAndHttpHost()}}{{ myPath2 }}&description={{ actu.title }}" data-pin-custom="true">
                        <i class="fab fa-pinterest-square share"></i>
                    </a>
                        </span>
                    <span class="publish">Publié le {{ actu.date|date('d/m/Y') }}</span>
                </div>
            </div>
        {% endfor %}
    </div>
</div>




