<div id="userProfil" class="col s12">

    <div class="row">
        <h2 class=" col s12 center-align">{{ user.name }} {{ user.firstname }}</h2>
        <div class="col m6 s12 center-align">
            <p class="title_list_profil">Profil</p>
            <ul>
                <li>Téléphone : {{ user.username }}</li>
                <li>Email : {{ user.email }}</li>
            </ul>
        </div>
        <div class="col m6 s12 center-align">
            <div class="col s12">
                {% if
                user.address1 != user.address2 or
                user.zipCode1 != user.zipCode2 or
                user.town1 != user.town2 or
                user.country1 != user.country2
                %}
                    <p class="title_list_profil">Adresse de livraison</p>
                {% else %}
                    <p class="title_list_profil">Adresse de livraison / facturation</p>
                {% endif %}

                <ul>
                    <li>
                        {{ user.address1 }}
                    </li>
                    <li>
                        {{ user.zipCode1 }} {{ user.town1 }} {{ user.country1 }}
                    </li>
                </ul>
            </div>
            {% if
                user.address1 != user.address2 or
                user.zipCode1 != user.zipCode2 or
                user.town1 != user.town2 or
                user.country1 != user.country2
            %}
                <div class="col s12">
                    <p class="title_list_profil">Adresse de facturation</p>
                    <ul>
                        <li>
                            {{ user.address2 }}
                        </li>
                        <li>
                            {{ user.zipCode2 }} {{ user.town2 }} {{ user.country2 }}
                        </li>
                    </ul>
                </div>
            {% endif %}
        </div>
    </div>
        <div class="col s12 row center-align" style="margin-top: 20px">
            <div class="col m6 s12 right-align">
                <a class="btn black" id="showFormUser" href="#formUser">Éditer votre profil</a>
            </div>
            <div class="col m6 s12 left-align">
                <a class="btn black" id="showFormUser" href="{{ path('fos_user_change_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
    </div>
</div>